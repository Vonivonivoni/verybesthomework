<div class="page-header">
  <h1>
    Favorites
    <a href="/favorites/new" class="btn btn-lg btn-success">New Favorite</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Dish</th>
        <th>Venue</th>
        <th>Location</th>
        <th>Username</th>
        <th>Actions</th>
      </tr>

      <% @favorites.each do |favorite| %>
      <tr>
        <td>
          <% if favorite.favorite_dish.present? %>
            <a href="/dishes/<%= favorite.favorite_dish.id %>">
              <%= favorite.favorite_dish.created_at %>
            </a>
          <% end %>
        </td>
        <td>
          <% if favorite.favorite_venues.present? %>
            <a href="/venues/<%= favorite.favorite_venues.id %>">
              <%= favorite.favorite_venues.location_id %>
            </a>
          <% end %>
        </td>
        <td>
          <% if favorite.location.present? %>
            <a href="/locations/<%= favorite.location.id %>">
              <%= favorite.location.address %>
            </a>
          <% end %>
        </td>
        <td><%= favorite.username_id %></td>
        <td>
          <a href="/favorites/<%= favorite.id %>" class="btn btn-primary">Show</a>
          <a href="/favorites/<%= favorite.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_favorite/<%= favorite.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @favorites, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
