<!-- Validation failure messages -->
<% if @cuisine.errors.any? %>
  <% @cuisine.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Cuisine</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_cuisine" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for restaurants_id -->
      <div class="form-group">
        <label for="restaurants_id" class="control-label">
          Restaurants
        </label>

        <%= select_tag(:restaurants_id, options_from_collection_for_select(Venue.all, :id, :location_id, @cuisine.restaurants_id), :class => "form-control") %>
      </div>

      <button class="btn btn-success">
        Create Cuisine
      </button>
      or
      <a href="/cuisines">Cancel</a>
    </form>
  </div>
</div>
