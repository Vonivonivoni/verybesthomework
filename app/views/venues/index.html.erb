<div class="form-group">
      <%= f.label :location_address_cont, "Location address contains" %>
      <%= f.text_field :location_address_cont, :class => "form-control", :placeholder => "Location address contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/venues" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#venues_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Location</th>
        <th>Favorites</th>
        <th>Actions</th>
      </tr>

      <% @venues.each do |venue| %>
      <tr>
        <td>
          <% if venue.location.present? %>
            <a href="/locations/<%= venue.location.id %>">
              <%= venue.location.address %>
            </a>
          <% end %>
        </td>
        <td>
          <% if venue.list_of_favorites.present? %>
            <a href="/favorites/<%= venue.list_of_favorites.id %>">
              <%= venue.list_of_favorites.dish_id %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/venues/<%= venue.id %>" class="btn btn-primary">Show</a>
          <a href="/venues/<%= venue.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_venue/<%= venue.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @venues, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
